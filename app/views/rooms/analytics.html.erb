<div class="sessions pb-5">
  <div class="container pt-6">
    <%= render "shared/components/subtitle", subtitle: 'Meetings', search: false %>
    <div id='room_mettings' class='row'>
      <div class="col-12">
        <div class="card">
          <div class="table-responsive">
            <table class="table stylish-table" id="meetings-table">
                <thead>
                    <tr>
                        <th align="left" width="15%">Metting Name</th>
                        <th align="center" width="15%">Start</th>
                        <th align="center" width="15%"">Finish</th>
                        <th align="center" width="10%">Duration</th>
                        <th align="center" width="10%">Attendees</th>
                        <th align="center" width="10%">Moderators</th>
                        <th align="center" width="10%">Viewers</th>
                        <th align="center" width="10%">Polls</th>
                        <th align="right" width="5%"></th>
                    </tr>
                </thead>
              <tbody>
                <% if @meetings.present? %>
                  <% @meetings.each do |meeting| %>
                    <tr>
                      <td align="left">
                        <h5>
                          <%= meeting.meeting_name %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= meeting.start.in_time_zone('Asia/Dubai') %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= meeting.finish.in_time_zone('Asia/Dubai') %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= display_duration(meeting.duration) %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= meeting.attendees %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= meeting.moderators %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= meeting.viewers %>
                        </h5>
                      </td>
                      <td align="center">
                        <h5>
                          <%= meeting.polls %>
                        </h5>
                      </td>
                      <td align="right" id='report_detail' data-href="<%= report_path(meeting.internal_id, room_uid: params[:room_uid]) %>" >
                        <a class="btn btn-sm btn-primary" href="javascript:void(0)">View</a>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>No Meetings</tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#meetings-table').on('click', 'tbody td', function(){
      console.log("table")
      if($(this).attr("data-href")){
        window.location = $(this).attr("data-href");
      }
    })
})
</script>
